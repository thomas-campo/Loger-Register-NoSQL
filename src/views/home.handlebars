<div>
    <button><a href="/login">iniciar sesion</a></button>
    <button><a href="/register">registrarse</a></button>
</div>
<div>
    <h2>Lista de Productos</h2>

    <div class={{user.id}} id="listProducts">
        {{#each allProducts}}
            <div>
                
                <h2>{{this.title}}</h2>
                <p>description : {{this.description}}</p>
                <p>price : <p class="price">{{this.price}}</p></p>
                <p>thumbnail : {{this.thumbnail}}</p>
                <p>code : {{this.code}}</p>
                <p>stock : {{this.stock}}</p>
                <p>id: {{this.id}}</p>

                <button class="agregarAlCarrito" id={{this.id}}>agregar al carrito</button>

            </div>
        {{/each}}
        </div>
        <br>
        {{#if hasPrevPage}}
        <a href="/?page={{prevPage}}"><button>Anterior</button></a>

        {{/if}}

        {{page}}

        {{#if hasNextPage}}
        <a href="/?page={{nextPage}}"><button>Siguiente</button></a>

        {{/if}}

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/product.js"></script>
