{{#if rolPremium}}
    <div>
      <div class="row card shadow m-5">

        <h1>{{user.name}}</h1>
        <p class="uid" id="{{user.id}}">User Id: {{user.id}}</p> 
        <p class="email" id="{{user.email}}">Email: {{user.email}}</p>
        <p>Rol: {{user.role}}</p>
        <p class="cid" id="{{cartId}}">Carrito: {{cartId}}</p>
        <a href="/api/sessions/logout"><button>cerrar sesion</button></a>
        <a href="/profile"><button>Ver perfil</button></a>
        <a href="/cart/{{cartId}}"><button>Carrito</button></a>

      </div>
        <br>
      <div id="listProducts">
      
        <h2>Lista de Productos</h2>

        <a href="/createProduct"><button>Crear productos</button></a>
        <br>

        <br>
        <a href="/deleteProduct"><button>Borrar tus productos</button></a>
        <br>
        <br>

        {{#if hasPrevPage}}

          <a href="/products?page={{prevPage}}"><button>Anterior</button></a>

        {{/if}}

        {{page}}

        {{#if hasNextPage}}

          <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>

        {{/if}}

        {{#each allProducts}}
          
          <div class="cards">
              
            <h2>{{this.title}}</h2>
            <p>description : {{this.description}}</p>
            <p>price : {{this.price}}</p>
            <p>thumbnail : {{this.thumbnail}}</p>
            <p>code : {{this.code}}</p>
            <p>stock : {{this.stock}}</p>
            <p>owner: {{this.owner}}</p>
            <p>id: {{this.id}}</p>

            <button class="agregarAlCarrito" id={{this.id}}>agregar al carrito</button>
            <br>

          </div>

        {{/each}}

      </div>
      <br>

      {{#if hasPrevPage}}

        <a href="/products?page={{prevPage}}"><button>Anterior</button></a>

      {{/if}}

      {{page}}

      {{#if hasNextPage}}

        <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>

      {{/if}}

    </div>
{{/if}}
