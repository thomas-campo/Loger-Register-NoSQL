<div>
    <h1>Usuario: {{user.name}}</h1>
    <p>Usario Id:</p><p id="userId">{{user.id}}</p>
    <p>Email:</p><p id="userMail">{{user.email}}</p>
    <p>Rol: {{user.role}}</p>
    <a href="/api/sessions/logout"><button>cerrar sesion</button></a>
    <a href="/products"><button>Volver</button></a>       
</div>
<div>
    <h1>Crea un nuevo producto</h1>

    <form id="createProductForm">
        <label>Titulo</label>
        <input name="title">
        <br>

        <label>Descripcion</label>
        <input name="description">
        <br>

        <label>Precio</label>
        <input type="number" name="price">
        <br>

        <label>Categoria</label>
        <input name="category">
        <br>

        <label>Thumbnail</label>
        <input name="thumbnail">
        <br>

        <label>Code</label>
        <input type="number" name="code">
        <br>

        <label>Stock</label>
        <input type="number" name="stock">
        <br>

        <input type="submit">
        <br>
    </form>
    <p id="message"></p>
</div>
{{#if rolPremium}}
<script src="/js/createProduct.js"></script>
{{/if}}
{{#if rolAdmin}}
<script src="/js/createProductAdmin.js"></script>
{{/if}}